<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:id="@+id/task"
    android:layout_weight="1"
    android:descendantFocusability="blocksDescendants">


    <ImageView
        android:layout_height="51dp"
        android:layout_width="5dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/imageView"
        android:src="@color/accent_material_light"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myCheckBox"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"/>

    <TextView
        android:text="Дата"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:layout_gravity="bottom"
        android:layout_alignBottom="@+id/imageView"
        android:layout_toRightOf="@+id/myCheckBox"
        android:layout_toEndOf="@+id/myCheckBox" />

    <TextView
        android:text="Заголовок"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/header"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/myCheckBox"
        android:layout_toEndOf="@+id/myCheckBox" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:id="@+id/isComplete"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/isComplete"
        android:layout_toStartOf="@+id/isComplete"
        android:id="@+id/importance" />

    <TextView
        android:text="Время"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTime"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_alignBaseline="@+id/date"
        android:layout_alignBottom="@+id/date"
        android:layout_toRightOf="@+id/date"
        android:layout_toEndOf="@+id/date" />

</RelativeLayout>